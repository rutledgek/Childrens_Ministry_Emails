include Lesson_Information\lesson_info.jade
include Article\Article.jade

doctype html
html
  head
    title This is an email
    meta(http-equiv="Content-Type",content="text/html; charset=utf-8")
    meta(name="viewport",content="width=device-width")
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    style
        include Styles\style.css
  body
    .email-background
      .pre-header
        | Here is the Sunday School Materials for this Sunday!  Thanks for serving.
      
      .email-container
        img(src=headerimage)
        
        h1 #{lessontitle}
      
        .hr
        
        table
          tr
            td 
              h3 Bible Story:
            td 
              a(href="https://www.biblegateway.com/passage/?search="+ lessonurl +"\&version=NIV",target="blank",style="color:black;") #{BibleStory}
          tr
            td
              h3 Anchor Point:
            td= AnchorPoint
          tr
            td
              h3 Memory Verse:
            td!= MemoryVerse
          tr
            td(colspan="2")
              h3 Lesson Summary:
              .hr(style="width:35%;")
              br
              p 
                include Lesson_Information\lessondetail.html
          tr
            td(style="width:50%; text-align:center; padding-top: 30px;")
              a(href=lessonLeaderGuide, class="button") Leader Guide
            td(style="width:50%; text-align:center; padding-top: 30px;")
              a(href=lessonReproducibles, class="button") Lesson Reproducibles
        
        
        .news(style="padding-top:50px;")
            include News\news.html


        .Article(style="padding-top:75px;")
            .hr(style="width:100%")
    
            img(src=article_img_url)
            h3= article_title
            br
            p
              include Article\article_blurb.html
              a(href=article_url) &nbsp; Read More...
          
